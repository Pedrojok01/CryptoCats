{
  "name": "hardhat",
  "version": "2.0.0",
  "description": "Crypto-Cats - Smart-Contracts",
  "author": "Pedrojok01 <pedrojok@pm.me>",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prettier": "prettier --write \"**/*.sol\" --plugin=\"prettier-plugin-solidity\"",
    "lint": "solhint \"contracts/**/*.sol\"",
    "compile": "hardhat compile --show-stack-traces",
    "test": "hardhat test --show-stack-traces",
    "deploy": "hardhat run --network sepolia hardhat/scripts/deploy.cts",
    "size": "hardhat size-contracts",
    "doc": "hardhat docgen",
    "cover": "hardhat coverage",
    "slither": "slither ./contracts --solc-remaps @openzeppelin=node_modules/@openzeppelin --exclude naming-convention,external-function,low-level-calls --buidler-ignore-compile"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "2.0.6",
    "@nomicfoundation/hardhat-ethers": "3.0.5",
    "@nomicfoundation/hardhat-ignition": "0.15.0",
    "@nomicfoundation/hardhat-ignition-ethers": "0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "1.0.10",
    "@nomicfoundation/hardhat-toolbox": "5.0.0",
    "@nomicfoundation/hardhat-verify": "2.0.5",
    "@nomicfoundation/ignition-core": "0.15.0",
    "@nomiclabs/hardhat-ethers": "2.2.3",
    "@openzeppelin/contracts": "5.0.2",
    "@typechain/ethers-v6": "0.5.1",
    "@typechain/hardhat": "9.1.0",
    "@types/chai": "4.3.13",
    "@types/mocha": "10.0.6",
    "@types/node": "20.11.30",
    "chai": "4.3.7",
    "dotenv": "16.4.5",
    "ethers": "6.11.1",
    "hardhat": "2.22.1",
    "hardhat-contract-sizer": "2.10.0",
    "hardhat-docgen": "1.3.0",
    "hardhat-gas-reporter": "2.0.2",
    "prettier": "3.2.5",
    "prettier-plugin-solidity": "1.3.1",
    "solhint": "4.5.2",
    "solhint-community": "3.7.0",
    "solhint-plugin-prettier": "0.1.0",
    "solidity-coverage": "0.8.11",
    "ts-node": "10.9.2",
    "typechain": "8.3.2",
    "typescript": "5.4.2"
  }
}
